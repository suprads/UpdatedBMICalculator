<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpdatedBMICalculator.RecommendationPage"
             Title="BMI Calculator">
    <VerticalStackLayout Spacing="50" Margin="20">
        <Frame HorizontalOptions="Center"
            BorderColor="White">
            <VerticalStackLayout Spacing="10" WidthRequest="500">
                <Label Text="Recommendations" HorizontalOptions="Center" FontSize="Large" />
                <Label x:Name="LblRecommendation" HorizontalOptions="Center" FontSize="Medium" />
                <Button Text="Results" Clicked="BtnResult_Clicked" />
                <Button Text="Home" Clicked="BtnHome_Clicked" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>