<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpdatedBMICalculator.ResultPage"
             Title="BMI Calculator">
    <VerticalStackLayout Spacing="50" Margin="20">
        <Label
            Text="BMI Results"
            FontSize="Large"
            HorizontalOptions="Center" />
        <Frame HorizontalOptions="Center"
               BorderColor="White">
            <VerticalStackLayout Spacing="10" WidthRequest="500" HeightRequest="500">
                <Label Text="BMI:" HorizontalOptions="Center" FontSize="Medium" />
                <Label x:Name="LblBMI" HorizontalOptions="Center" FontSize="Medium" />
                <Label Text="Gender:" HorizontalOptions="Center" FontSize="Medium" />
                <Label x:Name="LblGender" HorizontalOptions="Center" FontSize="Medium" />
                <Label Text="BMI Category:" HorizontalOptions="Center" FontSize="Medium" />
                <Label x:Name="LblHealthStatus" HorizontalOptions="Center" FontSize="Medium" />
                <Button Text="Recommendations" Clicked="BtnRecommendation_Clicked" />
                <Button Text="Home" Clicked="BtnHome_Clicked" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>